<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/longda_common_bg"
    android:gravity="center_horizontal"
    android:minHeight="95dp"
    android:minWidth="95dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/longda_margin_20"
        android:layout_marginBottom="@dimen/longda_margin_10"
        android:indeterminateDrawable="@drawable/longda_loading" />

    <TextView
        android:id="@+id/longda_loading_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/longda_margin_30"
        android:layout_marginRight="@dimen/longda_margin_30"
        android:layout_marginBottom="@dimen/longda_margin_20"
        android:text="@string/longda_common_loading"
        android:textColor="@color/longda_color_value_1"
        android:textSize="@dimen/longda_text_size_14" />
</LinearLayout>